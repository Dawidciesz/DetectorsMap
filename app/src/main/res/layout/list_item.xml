<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/itemImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintEnd_toStartOf="@+id/itemName"
            app:layout_constraintBottom_toTopOf="@+id/itemDescription"
            app:layout_constraintTop_toTopOf="@+id/itemDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="23dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[1]" />

    <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            tools:text="name"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/itemDescription"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="244dp" />

    <TextView
            android:id="@+id/itemDescription"
            android:layout_width="256dp"
            android:layout_height="55dp"
            android:textSize="12dp"
            tools:text="description description description description description descriptiondescription description description description description description  "
            app:layout_constraintTop_toBottomOf="@+id/itemName"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/itemName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

